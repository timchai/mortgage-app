<div class="rate"><h1>Today's Mortgage Rates</h1>
<h3>30 year fixed rate: <%= number_to_percentage(@rates[:thiry_year_fixed], precision: 2) %></h3>
<h3>15 year fixed rate: <%= number_to_percentage(@rates[:fifteen_year_fixed], precision: 2) %></h3>
<h3>5/1 ARM: <%= number_to_percentage(@rates[:five_one_arm], precision: 2) %></h3></div>

<div class="rate"><h1>Last Week's Rates</h1>
<h3>30 year fixed rate: <%= number_to_percentage(@last_week_rates[:thiry_year_fixed], precision: 2) %></h3>
<h3>15 year fixed rate: <%= number_to_percentage(@last_week_rates[:fifteen_year_fixed], precision: 2) %></h3>
<h3>5/1 ARM: <%= number_to_percentage(@last_week_rates[:five_one_arm], precision: 2) %></h3></div>

<%= bar_chart [
  {
    name: "Today's Rates", 
    data: [["30-Year Fixed", @rates[:thiry_year_fixed]], ["15-Year Fixed", @rates[:fifteen_year_fixed]], ["5/1 ARM", @rates[:five_one_arm]]]
  },
  {
    name: "Last Week's Rates", 
    data: [["30-Year Fixed", @last_week_rates[:thiry_year_fixed]], ["15-Year Fixed", @last_week_rates[:fifteen_year_fixed]], ["5/1 ARM", @last_week_rates[:five_one_arm]]]
  }] %>



