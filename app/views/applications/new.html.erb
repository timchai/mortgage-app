<div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>Application Form</strong>
                    </h2>
                    <hr>
                    <p><%= form_for @application do |f|%>
                    <h6 class="intro-text text-center">
                      <%= f.label :first_name, "First Name:" %>
                      <%= f.text_area :first_name %>
                    </h6>
                    <h6 class="intro-text text-center">
                      <%= f.label :last_name, "Last Name:" %>
                      <%= f.text_area :last_name %>
                    </h6>
                    <h6 class="intro-text text-center">
                      <%= f.label :address, "Address:" %>
                      <%= f.text_area :address %>
                    </h6>
                    <h6 class="intro-text text-center">
                      <%= f.label :income, "Annual Gross Income:" %>
                      <%= f.text_area :income %>
                    </h6>
                    
                    <h6 class="intro-text text-center">
                      <%= f.label :fico_score, "Fico Score:" %>
                      <%= f.text_area :fico_score %>
                    </h6>
                    
                    <h6 class="intro-text text-center">
                      <%= f.label :bankruptcy, "Bankruptcy within the last seven years?" %>
                      <%= f.text_area :bankruptcy %>
                    
                    <h6 class="intro-text text-center">
                      <%= f.submit "Get approval:" %>
                      
                    </h6>
                      </div>
                    <% end %></p>
                </div>
            </div>
        </div>