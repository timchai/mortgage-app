<div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>Application Form</strong>
                    </h2>
                    <hr>
                    <p><%= form_for @application do |f|%>
                    <h6 class="intro-text text-center">
                      <%= f.label :full_name, "Full Name:" %>
                      <%= f.text_field :full_name %>
                    </h6>
            
                    <h6 class="intro-text text-center">
                      <%= f.label :address, "Address:" %>
                      <%= f.text_field :address %>
                    </h6>
                    <h6 class="intro-text text-center">
                      <%= f.label :income, "Annual Gross Income:" %>
                      <%= f.text_field :income %>
                    </h6>
                    
                    <!-- <h6 class="intro-text text-center">
                      <%= f.label :debt, "Monthly Debt Obligations:" %>
                      <%= f.text_field :debt %>
                    </h6> -->

                    <h6 class="intro-text text-center">
                      <%= f.label :fico_score, "Fico Score:" %>
                      <%= f.text_field :fico_score %>
                    </h6>
                    
                    <h6 class="intro-text text-center">
                      <%= f.label :bankruptcy, "Bankruptcy within the last seven years?" %>
                      <%= f.radio_button :bankruptcy, 'true', :value => true %>
                      <%= label :bankruptcy, 'Yes' %>
                      <%= f.radio_button :bankruptcy, 'false', :value => false %>
                      <%= label :bankruptcy, 'No' %>
                    
                    <h6 class="intro-text text-center">
                      <%= f.submit "Get approval:" %>
                      
                    </h6>
                      </div>
                    <% end %></p>
                </div>
            </div>
        </div>