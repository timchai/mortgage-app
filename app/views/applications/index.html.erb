<div class="show"><h1>Application Form</h1></div>
<div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>Application Form</strong>
                    </h2>
                    <hr>
                    <p><%= form_tag '/loans', method: :post do %>
                    <h6 class="intro-text text-center">
                      <%= label_tag :name, "First Name:" %>
                      <%= text_area_tag :name %>
                    </h6>
                    <h6 class="intro-text text-center">
                      <%= label_tag :description, "Last Name:" %>
                      <%= text_area_tag :description %>
                    </h6>
                    <h6 class="intro-text text-center">
                      <%= label_tag :description, "Address:" %>
                      <%= text_area_tag :description %>
                    </h6>
                    <h6 class="intro-text text-center">
                      <%= label_tag :description, "Income:" %>
                      <%= text_area_tag :description %>
                    </h6>
                    <h6 class="intro-text text-center">
                      <%= label_tag :description, "Social Security Number:" %>
                      <%= text_area_tag :description %>
                    </h6>
                    <h6 class="intro-text text-center">
                      <%= label_tag :description, "Fico Score:" %>
                      <%= text_area_tag :description %>
                    </h6>
                    <h6 class="intro-text text-center">
                      <%= submit_tag "Get approval:" %>
                      
                    </h6>
                      </div>
                    <% end %></p>
                </div>
            </div>
        </div>